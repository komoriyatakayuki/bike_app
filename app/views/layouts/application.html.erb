<!DOCTYPE html>
<html>
  <head>
    <title>BikeApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class='fixed-top'>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark"">
        <a class="navbar-brand" href="/">BikeApp</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <a class="nav-item nav-link active" href="/bikes">Home <span class="sr-only">(current)</span></a>
          <a class="nav-item nav-link" href="#">Features</a>
      </div>
      </nav>
    </div>

    <div class="container">
       <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>
      <% if customer_signed_in? %>
        <%= link_to("logout", destroy_customer_session_path, { method: :delete, data: {confirm: "ログアウトしますか？"}, class: "nav-link"}) %>
      <% else %>
        <%= link_to 'signup', new_customer_registration_path %>
        <%= link_to 'signin', new_customer_session_path %>
      <% end %>
      
      <% if customer_signed_in? %>
        <%= current_customer.email %>
      <% end %>
    </div>
      <%= yield %>
  </body>
</html>
